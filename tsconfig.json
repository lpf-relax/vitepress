{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@server/*": [
        "server/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@data/*": [
        "data/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@assets/*": [
        "assets/*"
      ]
    },
    // 可以在这里添加或覆盖其他编译器选项
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ESNext",
    "module": "NodeNext",
    "resolveJsonModule": true
  },
  "include": [
    "components/**/*.ts",
    "components/**/*.vue",
    "src/**/*.ts",
    "src/**/*.vue",
    ".vitepress/theme/components/**/*.ts",
    ".vitepress/theme/components/**/*.vue",
  ]
}